function pkg() {
    if [[ "$1" == 'init' ]]; then
        pkgs=()
        return
    elif [[ "$1" == 'load' ]]; then
        procs=()
        _load_pkgs
        unset procs
        return
    elif [[ "$1" == 'update' ]]; then
        _update $pkgs
    fi
    if [[ -z $2 ]]; then
        pkgs+=($1 0)
    else
        pkgs+=($1 $2)
    fi
}
