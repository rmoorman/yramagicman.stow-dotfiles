function _load_pkgs() {
    tput civis
    for name alt in ${(kv)pkgs}
    do
        _source_or_install $name $alt
    done
    local dead=();
    if [[ $#procs > 0 ]]; then
        count=1
        for p in $procs; do
            wait $p
            builtin printf "\033[2K\rCompleted %s  of  %s " $count $#procs
            count=$(( $count + 1 ))
        done
        echo
    fi
    tput cnorm
}
