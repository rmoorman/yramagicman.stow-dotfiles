text/html; firefox.sh %s;
text/html; w3m -M -I utf-8 -dump %s; nametemplate=%s.html; copiousoutput

# MS Word documents
application/msword; ~/.mutt/view_attachment.sh %s "-" '/Applications/TextEdit.app'
text/plain; ~/.mutt/view_attachment.sh %s "-" '/Applications/TextWrangler.app'
application/vnd.openxmlformats-officedocument.wordprocessingml.document; ~/.mutt/view_attachment.sh %s "-" /Applications/Pages.app
application/vnd.openxmlformats-officedocument.spreadsheetml.sheet; ~/.mutt/view_attachment.sh %s "-" /Applications/Numbers.app
# Images
image/jpg; ~/.mutt/view_attachment.sh %s jpg viewnior
image/jpeg; ~/.mutt/view_attachment.sh %s jpg viewnior
image/pjpeg; ~/.mutt/view_attachment.sh %s jpg viewnior
image/png; ~/.mutt/view_attachment.sh %s png viewnior
image/gif; ~/.mutt/view_attachment.sh %s gif viewnior
image/tiff; ~/.mutt/view_attachment.sh %s gif viewnior
image/svg+xml; ~/.mutt/view_attachment.sh %s svg
# PDFs
application/pdf; ~/.mutt/view_attachment.sh %s pdf

# HTML
text/html; ~/.mutt/view_attachment.sh %s html
application/zip; ~/.mutt/view_attachment.sh %s zip

application/zip; ~/.mutt/view_attachment.sh %s zip

application/x-mspublisher; ~/.mutt/view_attachment.sh %s txt

# Unidentified files
application/octet-seam; ~/.mutt/view_attachment.sh %s "-"
