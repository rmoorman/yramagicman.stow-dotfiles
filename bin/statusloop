#!/usr/bin/zsh
sleep 3s
left=$( xrandr | awk '/ connected/ {print substr($3, 0, 4)}' | sed "${1}q;d" )
dpi=$(xrdb -query | awk '/dpi/ {print $2}')
echo $left
if [[ $dpi -gt 100 ]]; then
    width=1000
else
    width=800
fi
while;
do
    statusline
    sleep 1s;
done | dzen2 -dock -ta r -fn mono:size=10 -fg grey -x $(( $left - $width )) -tw 1000 -xs $1
